  int star_number = 10;
  for (int i = 0; i < star_number; i++) {
            System.out.println(" ");
            for (int k = star_number; k > i; k--) {
                System.out.print(" ");
            }
            for (int j = 0; j <= i; j++) {
                System.out.print("*");
            }
            for (int k = 0; k < i; k++) {
                System.out.print("*");
            }
        }
        System.out.println("");
    }
